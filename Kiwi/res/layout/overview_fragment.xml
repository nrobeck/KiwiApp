<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:kiwi="http://schemas.android.com/apk/res/umn.cs5115.kiwi"
    android:id="@+id/listContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:drawSelectorOnTop="false" />

    <umn.cs5115.kiwi.ui.OverviewEmptyView
        android:id="@+android:id/empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        kiwi:assignmentButtonText="New assignment"
        kiwi:courseButtonText="Add course(s)"
        kiwi:filterButtonText="Modify filter"
        kiwi:icon="@drawable/icon_kiwi"
        kiwi:text="@string/overview_no_assignments" />

</FrameLayout>