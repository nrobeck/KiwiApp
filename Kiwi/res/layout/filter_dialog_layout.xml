<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/TextView01"
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sort by..."
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:tag="@integer/zero"
            android:text="Due Date" />

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="@integer/one"
            android:text="Course" />

        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="@integer/two"
            android:text="Assignment Type" />
    </RadioGroup>


    <TextView
        android:id="@+id/TextView02"
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Completed Assignments"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <CheckBox
        android:id="@+id/show_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show completed assignments" />
    
    <TextView
        android:id="@+id/textView2"
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Courses"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <LinearLayout
        android:id="@+id/courses_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/no_courses_textview" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No courses!"
            android:visibility="gone"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
    </LinearLayout>
    
	<TextView
	    android:id="@+id/textView3"
	    style="?android:attr/listSeparatorTextViewStyle"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="Show Assignment Type"
	    android:textAppearance="?android:attr/textAppearanceSmall" />

	<LinearLayout
	    android:id="@+id/assignment_types_linearlayout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >

	</LinearLayout>
</LinearLayout>
</ScrollView>